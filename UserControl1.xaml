<UserControl x:Class="WinFormsAppSetHighDpiModeBug.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinFormsAppSetHighDpiModeBug"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Menu1" Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="Menu2" Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="Menu3" Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="Menu4" Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="Menu5" Click="MenuItem_Click"></MenuItem>
            </ContextMenu>
        </Grid.ContextMenu>
        <TextBlock FontSize="20" TextWrapping="Wrap">Try to right-click on this text to open the context menu, then try to hover the mouse over the menu items. Your display settings must be set to 125% to reproduce the bug.</TextBlock>
    </Grid>
</UserControl>
